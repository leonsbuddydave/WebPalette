{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "debugger",
    "notifications",
    "webNavigation"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/content/Dispatcher.js",
        "scripts/content/Dialog.js",
        "scripts/content/DialogRenderer.js",
        "scripts/content/ConditionEvaluator.js",
        "scripts/content/Storage.js",
        "scripts/content/CommandMapFactory.js",
        "scripts/content/CommandRunner.js",
        "scripts/content/CommandPalette.js",
        "scripts/contentscript.js"
      ],
      "css": [
        "styles/command-palette.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "WebActions",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]
}
